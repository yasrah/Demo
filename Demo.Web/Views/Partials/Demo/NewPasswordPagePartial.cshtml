@using Demo.Web.Controllers;

@model Demo.Web.Models.ForgotenPasswordViewModel

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Forget Password?</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginUmbracoForm<LoginController>("Email"))
                {
                    @Html.AntiForgeryToken() // Security
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Inter your Email here", @class = "form-control" })
                            @*<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>*@
                        </div>
    
                        <!-- Change this to a button or input when using this as a form -->
                        @*<a href="index.html" class="btn btn-lg btn-success btn-block">Logisen</a>*@
                        <button type="submit" class="btn btn-lg btn-success btn-block">Send</button>

                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
