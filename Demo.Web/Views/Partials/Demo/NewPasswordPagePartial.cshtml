@using Demo.Web.Controllers;

@model Demo.Web.Models.ForgotenPasswordViewModel

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Glemt Passord?</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginUmbracoForm<LoginController>("Email"))
                {
                    @Html.AntiForgeryToken()
                <fieldset>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Epost", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-success btn-block">Be om nytt passord</button>
                    </div>
                    <p class="text-danger">@TempData["Status"]</p>
                                        <a href="/">Tilbake til påloggingsside</a>
</fieldset>
                }
            </div>
        </div>
    </div>
</div>
