                                <div class="form-group">
                                    <label for="Name">Navn</label>
                                    <input class="form-control" ng-model="complaintReportFormatted.Customer.Name" id="CustomerName" type="text" placeholder="Navn">
                                </div>
                                <div class="form-group">
                                    <label for="Name">Adresse</label>
                                    <input class="form-control" ng-model="complaintReportFormatted.Customer.Address" id="CustomerAddress" type="text" placeholder="Adresse">
                                </div>
                                <div class="form-group">
                                    <label>Privat eller firma</label>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" ng-model="complaintReportFormatted.Customer.CustomerType" name="optionsRadios" id="optionCustomerType1" value="1" ng-checked="complaintReportFormatted.Customer.CustomerType==1">Privat
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label>
                                            <input type="radio" ng-model="complaintReportFormatted.Customer.CustomerType" name="optionsRadios" id="optionCustomerType2" value="2" ng-checked="complaintReportFormatted.Customer.CustomerType==2">Næring
                                        </label>
                                    </div>
                                </div>
                                <p class="alert-danger">{{error}}</p>
